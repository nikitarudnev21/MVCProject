@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="maincontent">
        <table id="tablesale">
            <tr>
                <th><p>Название книги</p></th>
                <th><p id="autor">Автор</p></th>
                <th><p>Цена</p></th>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>